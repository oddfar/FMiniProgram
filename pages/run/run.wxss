/* pages/run/run.wxss */
.kuang{
  margin-top: 20px;
}
.kuang input {
  font-size: 18px;
  /* 设置输入框中字体的大小 */
  height: 35px;
  /* 设置输入框的高度 */
  width: 250px;
  margin: 0px auto;
  margin-bottom: 15px;
  border-radius: 5px;
  /* 设置输入框的圆角的大小 */
  border: 2px solid #c8cccf;
  /* 设置输入框边框的粗细和颜色 */
  color: #986655;
  /* 设置输入框中文字的颜色 */
  outline: 0;
  /* 将输入框点击的时候出现的边框去掉 */
  text-align: left;
  /* 设置输入框中文字的位置 */
  padding-left: 10px;
  display: block;
  /* 将输入框设置为块级元素 */
  box-shadow: 2px 2px 5px 1px #ccc;
}

.wx-swiper-dots .wx-swiper-dot {
  display: none;
}

.kuang button {
  color: white;
  font-size: 28rpx;
  background-color: rgb(50,77,86);
  height: 72rpx;
  margin-top: 20rpx;
  left: 10rpx;
}
.shuchu{
  font-size: 30rpx;
  text-align: center;
  width: 100%;
  height: 70rpx;
  margin:0px auto;
  margin-top: 20px;

}
.intr-text{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  color: #007acc;
}